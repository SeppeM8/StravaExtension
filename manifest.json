{
  "name": "Strava Speed (Km/h / mph)",
  "description": "__MSG_appDesc__",
  "version": "0.1.0",
  "default_locale": "en",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.strava.com/dashboard*",
        "*://*.strava.com/athletes*"
      ],
      "js": [
        "cards.js"
      ]
    },
    {
      "matches": [
        "*://*.strava.com/activities*"
      ],
      "js": [
        "activities.js"
      ]
    },
    {
      "matches": [
        "*://*.strava.com/segments*"
      ],
      "js": [
        "segments.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}