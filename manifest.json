{
    "name": "Strava Speed (Km/h / mph)",
    "description": "__MSG_appDesc__",
    "version": "0.0.8",
    "default_locale": "en",
    "manifest_version": 3,
    "icons": {  "16": "icons/icon16.png",
                "48": "icons/icon48.png",
                "128": "icons/icon128.png" },
    "background": {
        "service_worker": "background.js"
      },
    "content_scripts": [
        {
            "matches": ["*://*.strava.com/*"],
            "js": ["paceToSpeed.js"]
        }
    ],
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html"
    }
  }